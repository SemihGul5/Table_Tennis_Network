<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.abrebo.tabletennishub.ui.fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_addMatchFragment"
            app:destination="@id/addMatchFragment" />
        <action
            android:id="@+id/action_mainFragment_to_updateMatchFragment"
            app:destination="@id/updateMatchFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.abrebo.tabletennishub.ui.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_addFriendFragment"
            app:destination="@id/addFriendFragment" />
        <action
            android:id="@+id/action_profileFragment_to_requestsFragment"
            app:destination="@id/requestsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_friendsFragment"
            app:destination="@id/friendsFragment" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.abrebo.tabletennishub.ui.fragment.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/addFriendFragment"
        android:name="com.abrebo.tabletennishub.ui.fragment.AddFriendFragment"
        android:label="fragment_add_friend"
        tools:layout="@layout/fragment_add_friend" />
    <fragment
        android:id="@+id/requestsFragment"
        android:name="com.abrebo.tabletennishub.ui.fragment.RequestsFragment"
        android:label="fragment_requests"
        tools:layout="@layout/fragment_requests" />
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.abrebo.tabletennishub.ui.fragment.FriendsFragment"
        android:label="fragment_friends"
        tools:layout="@layout/fragment_friends" />
    <fragment
        android:id="@+id/addMatchFragment"
        android:name="com.abrebo.tabletennishub.ui.fragment.AddMatchFragment"
        android:label="fragment_add_match"
        tools:layout="@layout/fragment_add_match" />
    <fragment
        android:id="@+id/updateMatchFragment"
        android:name="com.abrebo.tabletennishub.ui.fragment.UpdateMatchFragment"
        android:label="fragment_update_match"
        tools:layout="@layout/fragment_update_match" >
        <argument
            android:name="match"
            app:argType="com.abrebo.tabletennishub.data.model.Match" />
    </fragment>
</navigation>